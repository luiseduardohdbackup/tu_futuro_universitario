<%= form_for @scholarship, :html => { :multipart => true } do |f| %>
  <% if @scholarship.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@scholarship.errors.count, "error") %> prohibited this scholarship from being saved:</h2>

      <ul>
      <% @scholarship.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :name, 'Nombre(s)' %><br />
    <%= f.text_field :name %>
  </div>
  <div class="field">
    <%= f.label :last_name, 'Apellido Paterno' %><br />
    <%= f.text_field :last_name %>
  </div>
  <div class="field">
    <%= f.label :middle_name, 'Apellido Materno' %><br />
    <%= f.text_field :middle_name %>
  </div>
  <div class="field">
    <%= f.label :email, 'Correo Electrónico' %><br />
    <%= f.text_field :email %>
  </div>
  <div class="field">
    <%= f.label :school_id, 'Escuela' %><br />
    <%= f.select :school_id, options_from_collection_for_select(@schools, 'id', 'name') %>
  </div>
  <div class="field">
    <%= f.label :birthdate, 'Fecha de Cumpleaños' %><br />
    <%= f.date_select :birthdate %>
  </div>
  <div class="field">
    <%= f.label :sex, 'Sexo' %><br />
    <%= f.radio_button("sex", "Hombre") %> Hombre <%= f.radio_button("sex", "Mujer") %> Mujer <br />
  </div>
  <div class="field">
    <%= f.label :phone, 'Telefono'%><br />
    <%= f.text_field :phone %>
  </div>
  <div class="field">
    <%= f.label :gpa, 'Promedio actual' %><br />
    <%= f.text_field :gpa %>
  </div>
  <div class="field">
    <%= f.label :school_activities, 'Actividades escolares' %><br />
    <%= f.text_area :school_activities %>
  </div>
  <div class="field">
    <%= f.label :extracurricular_activities, 'Actividades extracurriculares' %><br />
    <%= f.text_area :extracurricular_activities %>
  </div>
  <div class="field">
    <%= f.label :transcript, 'Boleta de calificaciones' %><br />
    <%= f.file_field :transcript %>
  </div>
  <div class="field">
    <%= f.label :curriculum, 'Currículum' %><br />
    <%= f.text_area :curriculum %>
  </div>
  <div class="field">
    <%= f.label :essay, 'Ensayo' %><br />
    <%= f.text_area :essay %>
  </div>
  <div class="field">
    <%= f.label :recomendation, 'Carta de recomendación' %><br />
    <%= f.file_field :recomendation %>
  </div>
  <div class="field">
    <%= f.label :letter, 'Carta del padre o tutor' %><br />
    <%= f.file_field :letter %>
  </div>
  <div class="field"> 
    <h3>Padre o Tutor</h3>
  </div>
  <div class="field">
    <%= f.label :name_tutor, 'Nombre' %><br />
    <%= f.text_field :name_tutor %>
  </div>
  <div class="field">
    <%= f.label :address_tutor, 'Domicilio' %><br />
    <%= f.text_field :address_tutor %>
  </div>
  <div class="field">
    <%= f.label :home_phone_tutor, 'Teléfono casa' %><br />
    <%= f.text_field :home_phone_tutor %>
  </div>
  <div class="field">
    <%= f.label :office_phone_tutor, 'Teléfono Oficina' %><br />
    <%= f.text_field :office_phone_tutor %>
  </div>
  <div class="field">
    <%= f.label :occupation_tutor, 'Ocupación' %><br />
    <%= f.text_field :occupation_tutor %>
  </div>
  <div class="field">
    <%= f.label :monthly_stipend_tutor, 'Sueldo Mensual' %><br />
    <%= f.text_field :monthly_stipend_tutor %>
  </div>
  <div class="field">
    <%= f.label :home_people, 'No. de personas en el hogar' %><br />
    <%= f.number_field :home_people %>
  </div>
  <div class="field">
    <%= f.label :parents_marital_status, 'Estado civil de los padres' %><br />
    <%= f.select :parents_marital_status, options_for_select(["Casados", "Divorciados", "Padre Soltero", "Madre Soltera", "Otro"]), {:include_blank => true } %>
  </div>
  <div class="field">
    <%= f.label :siblings, 'No. de hermanos' %><br />
    <%= f.number_field :siblings %>
  </div>
  <div class="field">
    <%= f.label :father_name, 'Nombre del padre' %><br />
    <%= f.text_field :father_name %>
  </div>
  <div class="field">
    <%= f.label :mother_name, 'Nombre de la madre' %><br />
    <%= f.text_field :mother_name %>
  </div>
  <div class="actions">
    <%= f.submit 'Enviar Beca' %>
  </div>
<% end %>
