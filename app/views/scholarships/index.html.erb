<table>
  <tr>
    <th>Name</th>
    <th>Last name</th>
    <th>Middle name</th>
    <th>Email</th>
    <th>School</th>
    <th>Birthdate</th>
    <th>Sex</th>
    <th>Phone</th>
    <th>Gpa</th>
    <th>School activities</th>
    <th>Extracurricular activities</th>
    <th>Curriculum</th>
    <th>Essay</th>
