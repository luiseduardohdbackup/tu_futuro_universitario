<% @scholarships.each do |scholarship| %>
  <tr>
    <td><%= scholarship.name %></td>
    <td><%= scholarship.last_name %></td>
    <td><%= scholarship.middle_name %></td>
    <td><%= scholarship.email %></td>
    <td><%= scholarship.school_id %></td>
    <td><%= scholarship.birthdate %></td>
    <td><%= scholarship.sex %></td>
    <td><%= scholarship.phone %></td>
    <td><%= scholarship.gpa %></td>
    <td><%= scholarship.school_activities %></td>
    <td><%= scholarship.extracurricular_activities %></td>
    <td><%= scholarship.curriculum %></td>
    <td><%= scholarship.essay %></td>
    <td><%= scholarship.name_tutor %></td>
    <td><%= scholarship.address_tutor %></td>
    <td><%= scholarship.home_phone_tutor %></td>
    <td><%= scholarship.office_phone_tutor %></td>
    <td><%= scholarship.occupation_tutor %></td>
    <td><%= scholarship.monthly_stipend_tutor %></td>
    <td><%= scholarship.home_people %></td>
    <td><%= scholarship.parents_marital_status %></td>
    <td><%= scholarship.siblings %></td>
    <td><%= scholarship.father_name %></td>
    <td><%= scholarship.mother_name %></td>
    <td><%= link_to 'Show', scholarship %></td>
    <td><%= link_to 'Edit', edit_scholarship_path(scholarship) %></td>
    <td><%= link_to 'Destroy', scholarship, confirm: 'Are you sure?', method: :delete %></td>
  </tr>
<% end %>
</table>

