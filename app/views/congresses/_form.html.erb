<%= form_for @congress do |f| %>
  <%= f.error_messages %>
  <p>
  <%= f.label :title %><br />
  <%= f.text_field :title %>
  </p>
  <p>
  <%= f.label :description %><br />
  <%= f.text_area :description %>
  </p>
  <p>
  <table>
    <tr>
      <td><%= f.label "Start" %></td>
      <td><%= f.label "End" %></td>
    </tr>
    <tr>
      <td><%= f.text_field :start_date, :value => @congress.start_date.to_s, :class =>'calendar' %></td>
      <td><%= f.text_field :end_date, :value => @congress.end_date.to_s, :class => 'calendar' %></td>
    </tr>
  </table>
  </p>
  <%= (image_tag @congress.image_url(:thumb).to_s) if @congress.image %>
  <p>
  <%= f.label "image" %>
  <%= f.file_field :image %>
  </p>
  <p><%= f.submit %></p>
<% end %>
