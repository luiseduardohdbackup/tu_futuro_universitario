<tr id="schools_content">  
  <td><%= link_to school.name, school_path(school) %></td>
  <td><%= school.contact %></td>
  <td><%= number_to_phone(school.phone, :area_code => true) %></td>
  <td>
    <%= link_to "Editar", edit_school_path(school), :class => "btn success" %>
    <%= link_to "Eliminar", school,:class => "btn danger", :confirm => 'Are you sure?', :method => :delete %>
  </td>
</tr>
